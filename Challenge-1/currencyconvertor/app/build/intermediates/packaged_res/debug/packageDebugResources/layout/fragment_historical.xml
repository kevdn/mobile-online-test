<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp">

    <EditText
            android:id="@+id/base_currency_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Base Currency (e.g., USD)" />

    <EditText
            android:id="@+id/target_currency_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Target Currency (e.g., EUR)" />

    <EditText
            android:id="@+id/year_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year" />

    <EditText
            android:id="@+id/month_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Month (no leading zeros)" />

    <EditText
            android:id="@+id/day_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Day (no leading zeros)" />

    <Button
            android:id="@+id/get_rate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Historical Rate" />

    <TextView
            android:id="@+id/conversion_rate_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

    <TextView
            android:id="@+id/error_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginTop="8dp" />
</LinearLayout>
